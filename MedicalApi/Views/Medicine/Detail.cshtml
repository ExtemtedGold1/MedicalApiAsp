@model MedicalApi.Models.Medicine.AssetDetailModel

<div class="container">
    <div class="page-header clearfix detailHeading">
        <h2 class="text-muted">View Medical item</h2>
    </div>
</div>
<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <div>
                <img class="detailImage w-50" src="@Model.ImageUrl" />
            </div>
        </div>
        <div class="col-md-4">
            <div>
                <p id="itemTitle">@Model.Title</p>
                <p id="itemAuthor">@Model.AuthorOrDirector</p>
                <p id="itemStatus">@Model.Status</p>
                <p id="itemType">@Model.Type</p>
                <p id="itemLocation">@Model.CurrentLocation</p>

                @if (Model.Status == "Lost")
                {
                    <p>This item has been lost. it ...</p>
                    <p><a class="btn btn-lg btn-danger" role="button" asp-controller="Medicine" asp-action="MarkFound" asp-route-id="@Model.AssedId">Mark item found</a></p>

                }

                @if (Model.Status == "Checked Out")
                {
                    <p id="itemPatron">Checked Out By: @Model.PatronName</p>
                    <p><a class="btn btn-lg btn-success" role="button" asp-controller="Medicine" asp-action="CheckoutIn" asp-route-id="@Model.AssedId">Check In</a></p>
                    <p><a class="btn btn-lg btn-warning" role="button" asp-controller="Medicine" asp-action="Hold" asp-route-id="@Model.AssedId">Place Hold</a></p>
                }

                @if (Model.Status == "Available")
                {
                    <p><a class="btn btn-lg btn-info" role="button" asp-controller="Medicine" asp-action="Checkout" asp-route-id="@Model.AssedId">Check Out</a></p>
                }

            </div>
        </div>
        <div class="col-md-4 detailInfo">
            <table>
                <tr>
                    <td class="itemLabel">NRMD: </td>
                    <td class="itemValue">@Model.NRMD</td>
                </tr>
                <tr>
                    <td class="itemLabel">Call Number: </td>
                    <td class="itemValue">@Model.DeweyCallNumber</td>
                </tr>
                <tr>
                    <td class="itemLabel">Replacment Cost: </td>
                    <td class="itemValue">@Model.Cost</td>
                </tr>
            </table>
        </div>
    </div>
</div>